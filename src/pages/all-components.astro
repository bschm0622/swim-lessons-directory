---
import Layout from "@/layouts/Layout.astro";
import Accordion from "@/components/ui/Accordion.astro";
import AccordionItem from "@/components/ui/AccordionItem.astro";
import AccordionTrigger from "@/components/ui/AccordionTrigger.astro";
import AccordionContent from "@/components/ui/AccordionContent.astro";
import Button from "@/components/ui/Button.astro";
import Input from "@/components/ui/Input.astro";
import Label from "@/components/ui/Label.astro";
import Card from "@/components/ui/Card.astro";
import CardHeader from "@/components/ui/CardHeader.astro";
import CardTitle from "@/components/ui/CardTitle.astro";
import CardDescription from "@/components/ui/CardDescription.astro";
import CardAction from "@/components/ui/CardAction.astro";
import CardContent from "@/components/ui/CardContent.astro";
import CardFooter from "@/components/ui/CardFooter.astro";
import Badge from "@/components/ui/Badge.astro";
import NavigationMenu from "@/components/ui/NavigationMenu.astro";
import NavigationMenuList from "@/components/ui/NavigationMenuList.astro";
import NavigationMenuItem from "@/components/ui/NavigationMenuItem.astro";
import NavigationMenuTrigger from "@/components/ui/NavigationMenuTrigger.astro";
import NavigationMenuContent from "@/components/ui/NavigationMenuContent.astro";
import NavigationMenuLink from "@/components/ui/NavigationMenuLink.astro";
import Tabs from "@/components/ui/Tabs.astro";
import TabsList from "@/components/ui/TabsList.astro";
import TabsTrigger from "@/components/ui/TabsTrigger.astro";
import TabsContent from "@/components/ui/TabsContent.astro";
import AlertDialog from "@/components/ui/AlertDialog.astro";
import AlertDialogTrigger from "@/components/ui/AlertDialogTrigger.astro";
import AlertDialogContent from "@/components/ui/AlertDialogContent.astro";
import AlertDialogHeader from "@/components/ui/AlertDialogHeader.astro";
import AlertDialogFooter from "@/components/ui/AlertDialogFooter.astro";
import AlertDialogTitle from "@/components/ui/AlertDialogTitle.astro";
import AlertDialogDescription from "@/components/ui/AlertDialogDescription.astro";
import AlertDialogAction from "@/components/ui/AlertDialogAction.astro";
import AlertDialogCancel from "@/components/ui/AlertDialogCancel.astro";
import Sidebar from "@/components/ui/Sidebar.astro";
import SidebarTrigger from "@/components/ui/SidebarTrigger.astro";
import SidebarContent from "@/components/ui/SidebarContent.astro";
import SidebarHeader from "@/components/ui/SidebarHeader.astro";
import SidebarFooter from "@/components/ui/SidebarFooter.astro";
import SidebarClose from "@/components/ui/SidebarClose.astro";
import Separator from "@/components/ui/Separator.astro";
import Checkbox from "@/components/ui/Checkbox.astro";
import Select from "@/components/ui/Select.astro";
import SelectItem from "@/components/ui/SelectItem.astro";
import Textarea from "@/components/ui/Textarea.astro";
import RadioGroup from "@/components/ui/RadioGroup.astro";
import RadioGroupItem from "@/components/ui/RadioGroupItem.astro";
import DropdownMenu from "@/components/ui/DropdownMenu.astro";
import DropdownMenuTrigger from "@/components/ui/DropdownMenuTrigger.astro";
import DropdownMenuContent from "@/components/ui/DropdownMenuContent.astro";
import DropdownMenuItem from "@/components/ui/DropdownMenuItem.astro";
import DropdownMenuSeparator from "@/components/ui/DropdownMenuSeparator.astro";
import DropdownMenuLabel from "@/components/ui/DropdownMenuLabel.astro";
import Avatar from "@/components/ui/Avatar.astro";
import Tooltip from "@/components/ui/Tooltip.astro";
import TooltipTrigger from "@/components/ui/TooltipTrigger.astro";
import TooltipContent from "@/components/ui/TooltipContent.astro";
import { SITE } from "@/siteConfig";

const navLinks = SITE.nav;
---

<Layout title="All Components" description="All components">
    <Sidebar id="mobile-nav" side="left">
        <SidebarHeader>
            <h2 class="text-lg font-semibold">{SITE.name || SITE.title}</h2>
            <SidebarClose />
        </SidebarHeader>
        <SidebarContent>
            <nav class="space-y-2">
                {navLinks.map((link) => (
                    <a
                        href={link.href}
                        class="block px-3 py-2 rounded-md hover:bg-sidebar-accent hover:text-sidebar-accent-foreground"
                    >
                        {link.label}
                    </a>
                ))}
            </nav>
        </SidebarContent>
        <SidebarFooter>
            <p class="text-xs text-sidebar-foreground/70">
                {SITE.copyright}
            </p>
        </SidebarFooter>
    </Sidebar>

    <div class="container mx-auto p-8 space-y-12">
        <section>
            <h1 class="text-3xl font-bold mb-6">Tooltip Example</h1>
            <div class="space-y-6">
                <div class="flex gap-4 items-center flex-wrap">
                    <Tooltip id="tooltip-top">
                        <TooltipTrigger>
                            <Button variant="outline">Hover me (Top)</Button>
                        </TooltipTrigger>
                        <TooltipContent side="top">
                            This is a tooltip on the top
                        </TooltipContent>
                    </Tooltip>

                    <Tooltip id="tooltip-bottom">
                        <TooltipTrigger>
                            <Button variant="outline">Hover me (Bottom)</Button>
                        </TooltipTrigger>
                        <TooltipContent side="bottom">
                            This is a tooltip on the bottom
                        </TooltipContent>
                    </Tooltip>

                    <Tooltip id="tooltip-left">
                        <TooltipTrigger>
                            <Button variant="outline">Hover me (Left)</Button>
                        </TooltipTrigger>
                        <TooltipContent side="left">
                            This is a tooltip on the left
                        </TooltipContent>
                    </Tooltip>

                    <Tooltip id="tooltip-right">
                        <TooltipTrigger>
                            <Button variant="outline">Hover me (Right)</Button>
                        </TooltipTrigger>
                        <TooltipContent side="right">
                            This is a tooltip on the right
                        </TooltipContent>
                    </Tooltip>
                </div>

                <div class="space-y-3">
                    <h2 class="text-lg font-semibold">With Icon</h2>
                    <Tooltip id="tooltip-icon">
                        <TooltipTrigger>
                            <Button variant="ghost" size="icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <path d="M12 16v-4"></path>
                                    <path d="M12 8h.01"></path>
                                </svg>
                            </Button>
                        </TooltipTrigger>
                        <TooltipContent>
                            Get more information
                        </TooltipContent>
                    </Tooltip>
                </div>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Avatar Example</h1>
            <div class="space-y-6">
                <div class="space-y-3">
                    <h2 class="text-lg font-semibold">With Image</h2>
                    <div class="flex gap-4 items-center">
                        <Avatar
                            src="https://github.com/shadcn.png"
                            alt="User avatar"
                        />
                        <Avatar
                            src="https://github.com/vercel.png"
                            alt="Vercel avatar"
                            class="size-12"
                        />
                        <Avatar
                            src="https://github.com/nextjs.png"
                            alt="Next.js avatar"
                            class="size-16"
                        />
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-lg font-semibold">With Fallback</h2>
                    <div class="flex gap-4 items-center">
                        <Avatar fallback="BC" />
                        <Avatar fallback="JD" class="size-12" />
                        <Avatar fallback="AB" class="size-16" />
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-lg font-semibold">
                        In Context (User Profile)
                    </h2>
                    <div class="flex items-center gap-3">
                        <Avatar
                            src="https://github.com/shadcn.png"
                            alt="User"
                            class="size-12"
                        />
                        <div>
                            <div class="font-semibold">Becky Cooper</div>
                            <div class="text-sm text-muted-foreground">
                                becky@example.com
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Dropdown Menu Example</h1>
            <div class="space-y-4">
                <DropdownMenu>
                    <DropdownMenuTrigger>
                        <Button variant="outline">Open Menu</Button>
                    </DropdownMenuTrigger>
                    <DropdownMenuContent>
                        <DropdownMenuLabel>My Account</DropdownMenuLabel>
                        <DropdownMenuSeparator />
                        <DropdownMenuItem>Profile</DropdownMenuItem>
                        <DropdownMenuItem>Settings</DropdownMenuItem>
                        <DropdownMenuItem>Team</DropdownMenuItem>
                        <DropdownMenuSeparator />
                        <DropdownMenuItem variant="destructive"
                            >Log out</DropdownMenuItem
                        >
                    </DropdownMenuContent>
                </DropdownMenu>

                <DropdownMenu>
                    <DropdownMenuTrigger>
                        <Button>Actions</Button>
                    </DropdownMenuTrigger>
                    <DropdownMenuContent>
                        <DropdownMenuItem>
                            <svg
                                class="size-4"
                                viewBox="0 0 15 15"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M7.49991 0.876892C3.84222 0.876892 0.877075 3.84204 0.877075 7.49972C0.877075 11.1574 3.84222 14.1226 7.49991 14.1226C11.1576 14.1226 14.1227 11.1574 14.1227 7.49972C14.1227 3.84204 11.1576 0.876892 7.49991 0.876892ZM1.82707 7.49972C1.82707 4.36671 4.36689 1.82689 7.49991 1.82689C10.6329 1.82689 13.1727 4.36671 13.1727 7.49972C13.1727 10.6327 10.6329 13.1726 7.49991 13.1726C4.36689 13.1726 1.82707 10.6327 1.82707 7.49972ZM8.24992 4.49999C8.24992 4.9142 7.91413 5.24999 7.49992 5.24999C7.08571 5.24999 6.74992 4.9142 6.74992 4.49999C6.74992 4.08577 7.08571 3.74999 7.49992 3.74999C7.91413 3.74999 8.24992 4.08577 8.24992 4.49999ZM6.00003 5.99999H6.50003H7.50003C7.77617 5.99999 8.00003 6.22385 8.00003 6.49999V9.99999H8.50003H9.00003V11H8.50003H7.50003H6.50003H6.00003V9.99999H6.50003H7.00003V6.99999H6.50003H6.00003V5.99999Z"
                                    fill="currentColor"
                                    fill-rule="evenodd"
                                    clip-rule="evenodd"></path>
                            </svg>
                            View Details
                        </DropdownMenuItem>
                        <DropdownMenuItem>
                            <svg
                                class="size-4"
                                viewBox="0 0 15 15"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M11.8536 1.14645C11.6583 0.951184 11.3417 0.951184 11.1465 1.14645L3.71455 8.57836C3.62459 8.66832 3.55263 8.77513 3.50251 8.89181L2.04044 12.303C1.9599 12.4896 2.00189 12.709 2.14646 12.8536C2.29103 12.9981 2.51044 13.0401 2.69693 12.9596L6.10847 11.4975C6.22516 11.4474 6.33196 11.3754 6.42192 11.2855L13.8538 3.85355C14.0491 3.65829 14.0491 3.34171 13.8538 3.14645L11.8536 1.14645ZM4.42166 9.28547L11.5 2.20711L12.7929 3.5L5.71455 10.5784L4.21924 11.2192L3.78081 10.7808L4.42166 9.28547Z"
                                    fill="currentColor"
                                    fill-rule="evenodd"
                                    clip-rule="evenodd"></path>
                            </svg>
                            Edit
                        </DropdownMenuItem>
                        <DropdownMenuItem>
                            <svg
                                class="size-4"
                                viewBox="0 0 15 15"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    d="M5.5 1C5.22386 1 5 1.22386 5 1.5C5 1.77614 5.22386 2 5.5 2H9.5C9.77614 2 10 1.77614 10 1.5C10 1.22386 9.77614 1 9.5 1H5.5ZM3 3.5C3 3.22386 3.22386 3 3.5 3H5H10H11.5C11.7761 3 12 3.22386 12 3.5C12 3.77614 11.7761 4 11.5 4H11V12C11 12.5523 10.5523 13 10 13H5C4.44772 13 4 12.5523 4 12V4H3.5C3.22386 4 3 3.77614 3 3.5ZM5 4H10V12H5V4Z"
                                    fill="currentColor"
                                    fill-rule="evenodd"
                                    clip-rule="evenodd"></path>
                            </svg>
                            Delete
                        </DropdownMenuItem>
                    </DropdownMenuContent>
                </DropdownMenu>

                <DropdownMenu>
                    <DropdownMenuTrigger>
                        <Button variant="secondary">Long Menu</Button>
                    </DropdownMenuTrigger>
                    <DropdownMenuContent>
                        <DropdownMenuLabel>Categories</DropdownMenuLabel>
                        <DropdownMenuSeparator />
                        <DropdownMenuItem>Dashboard</DropdownMenuItem>
                        <DropdownMenuItem>Analytics</DropdownMenuItem>
                        <DropdownMenuItem>Reports</DropdownMenuItem>
                        <DropdownMenuItem>Projects</DropdownMenuItem>
                        <DropdownMenuItem>Tasks</DropdownMenuItem>
                        <DropdownMenuItem>Calendar</DropdownMenuItem>
                        <DropdownMenuItem>Messages</DropdownMenuItem>
                        <DropdownMenuItem>Contacts</DropdownMenuItem>
                        <DropdownMenuItem>Files</DropdownMenuItem>
                        <DropdownMenuItem>Settings</DropdownMenuItem>
                        <DropdownMenuSeparator />
                        <DropdownMenuItem>Team</DropdownMenuItem>
                        <DropdownMenuItem>Billing</DropdownMenuItem>
                        <DropdownMenuItem>API Keys</DropdownMenuItem>
                        <DropdownMenuItem>Webhooks</DropdownMenuItem>
                        <DropdownMenuItem>Integrations</DropdownMenuItem>
                        <DropdownMenuSeparator />
                        <DropdownMenuItem variant="destructive"
                            >Sign out</DropdownMenuItem
                        >
                    </DropdownMenuContent>
                </DropdownMenu>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Radio Group Example</h1>
            <div class="space-y-6 max-w-md">
                <div class="space-y-3">
                    <Label>Choose a plan</Label>
                    <RadioGroup name="plan">
                        <div class="flex items-center space-x-2">
                            <RadioGroupItem
                                id="plan-free"
                                name="plan"
                                value="free"
                            />
                            <Label
                                for="plan-free"
                                class="font-normal cursor-pointer">Free</Label
                            >
                        </div>
                        <div class="flex items-center space-x-2">
                            <RadioGroupItem
                                id="plan-pro"
                                name="plan"
                                value="pro"
                                checked
                            />
                            <Label
                                for="plan-pro"
                                class="font-normal cursor-pointer">Pro</Label
                            >
                        </div>
                        <div class="flex items-center space-x-2">
                            <RadioGroupItem
                                id="plan-enterprise"
                                name="plan"
                                value="enterprise"
                            />
                            <Label
                                for="plan-enterprise"
                                class="font-normal cursor-pointer"
                                >Enterprise</Label
                            >
                        </div>
                    </RadioGroup>
                </div>

                <div class="space-y-3">
                    <Label>Notification preferences</Label>
                    <RadioGroup name="notifications">
                        <div class="flex items-center space-x-2">
                            <RadioGroupItem
                                id="notif-all"
                                name="notifications"
                                value="all"
                            />
                            <Label
                                for="notif-all"
                                class="font-normal cursor-pointer"
                                >All notifications</Label
                            >
                        </div>
                        <div class="flex items-center space-x-2">
                            <RadioGroupItem
                                id="notif-mentions"
                                name="notifications"
                                value="mentions"
                            />
                            <Label
                                for="notif-mentions"
                                class="font-normal cursor-pointer"
                                >Mentions only</Label
                            >
                        </div>
                        <div class="flex items-center space-x-2">
                            <RadioGroupItem
                                id="notif-none"
                                name="notifications"
                                value="none"
                            />
                            <Label
                                for="notif-none"
                                class="font-normal cursor-pointer">None</Label
                            >
                        </div>
                    </RadioGroup>
                </div>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Textarea Example</h1>
            <div class="space-y-4 max-w-md">
                <div class="space-y-2">
                    <Label for="message">Message</Label>
                    <Textarea
                        id="message"
                        name="message"
                        placeholder="Type your message here..."
                    />
                </div>

                <div class="space-y-2">
                    <Label for="bio">Bio</Label>
                    <Textarea
                        id="bio"
                        name="bio"
                        rows={6}
                        placeholder="Tell us about yourself..."
                    />
                </div>

                <div class="space-y-2">
                    <Label for="disabled-textarea">Disabled</Label>
                    <Textarea
                        id="disabled-textarea"
                        disabled
                        value="This textarea is disabled"
                    />
                </div>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Select Example</h1>
            <div class="space-y-4 max-w-md">
                <div class="space-y-2">
                    <Label for="country">Country</Label>
                    <Select
                        id="country"
                        name="country"
                        placeholder="Select a country"
                    >
                        <SelectItem value="us">United States</SelectItem>
                        <SelectItem value="ca">Canada</SelectItem>
                        <SelectItem value="uk">United Kingdom</SelectItem>
                        <SelectItem value="au">Australia</SelectItem>
                        <SelectItem value="de">Germany</SelectItem>
                    </Select>
                </div>

                <div class="space-y-2">
                    <Label for="framework">Framework</Label>
                    <Select
                        id="framework"
                        name="framework"
                        defaultValue="astro"
                    >
                        <SelectItem value="astro">Astro</SelectItem>
                        <SelectItem value="react">React</SelectItem>
                        <SelectItem value="vue">Vue</SelectItem>
                        <SelectItem value="svelte">Svelte</SelectItem>
                    </Select>
                </div>

                <div class="space-y-2">
                    <Label for="disabled-select">Disabled Select</Label>
                    <Select
                        id="disabled-select"
                        placeholder="Cannot select"
                        disabled
                    >
                        <SelectItem value="1">Option 1</SelectItem>
                        <SelectItem value="2">Option 2</SelectItem>
                    </Select>
                </div>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Checkbox Example</h1>
            <div class="space-y-4">
                <div class="flex items-center space-x-2">
                    <Checkbox id="terms" />
                    <Label for="terms">Accept terms and conditions</Label>
                </div>
                <div class="flex items-center space-x-2">
                    <Checkbox id="checked" checked />
                    <Label for="checked">Already checked</Label>
                </div>
                <div class="flex items-center space-x-2">
                    <Checkbox id="disabled" disabled />
                    <Label for="disabled">Disabled checkbox</Label>
                </div>
                <div class="flex items-center space-x-2">
                    <Checkbox id="disabled-checked" disabled checked />
                    <Label for="disabled-checked">Disabled and checked</Label>
                </div>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Toast Example</h1>
            <div class="flex gap-3 flex-wrap">
                <Button onclick="toast('Event has been created')">
                    Show Toast
                </Button>
                <Button
                    variant="secondary"
                    onclick="toast('Event has been created', { description: 'This is a description of the event.' })"
                >
                    With Description
                </Button>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Separator Example</h1>
            <div>
                <div class="space-y-1">
                    <h4 class="text-sm leading-none font-medium">
                        Radix Primitives
                    </h4>
                    <p class="text-muted-foreground text-sm">
                        An open-source UI component library.
                    </p>
                </div>
                <Separator class="my-4" />
                <div class="flex h-5 items-center space-x-4 text-sm">
                    <div>Blog</div>
                    <Separator orientation="vertical" />
                    <div>Docs</div>
                    <Separator orientation="vertical" />
                    <div>Source</div>
                </div>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Sidebar Example</h1>
            <p class="mb-4">
                Click the button below to open the mobile sidebar:
            </p>
            <SidebarTrigger sidebarId="mobile-nav" />
        </section>
        <section>
            <h1 class="text-3xl font-bold mb-6">Button Examples</h1>

            <div class="space-y-6">
                <div class="space-y-3">
                    <h2 class="text-xl font-semibold">Default</h2>
                    <div class="flex gap-3 items-center">
                        <Button size="sm">Small</Button>
                        <Button>Default</Button>
                        <Button size="lg">Large</Button>
                        <Button size="icon">⚙</Button>
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-xl font-semibold">Destructive</h2>
                    <div class="flex gap-3 items-center">
                        <Button variant="destructive" size="sm">Small</Button>
                        <Button variant="destructive">Default</Button>
                        <Button variant="destructive" size="lg">Large</Button>
                        <Button variant="destructive" size="icon">×</Button>
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-xl font-semibold">Outline</h2>
                    <div class="flex gap-3 items-center">
                        <Button variant="outline" size="sm">Small</Button>
                        <Button variant="outline">Default</Button>
                        <Button variant="outline" size="lg">Large</Button>
                        <Button variant="outline" size="icon">↗</Button>
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-xl font-semibold">Secondary</h2>
                    <div class="flex gap-3 items-center">
                        <Button variant="secondary" size="sm">Small</Button>
                        <Button variant="secondary">Default</Button>
                        <Button variant="secondary" size="lg">Large</Button>
                        <Button variant="secondary" size="icon">★</Button>
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-xl font-semibold">Ghost</h2>
                    <div class="flex gap-3 items-center">
                        <Button variant="ghost" size="sm">Small</Button>
                        <Button variant="ghost">Default</Button>
                        <Button variant="ghost" size="lg">Large</Button>
                        <Button variant="ghost" size="icon">⋮</Button>
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-xl font-semibold">Link</h2>
                    <div class="flex gap-3 items-center">
                        <Button variant="link" size="sm">Small</Button>
                        <Button variant="link">Default</Button>
                        <Button variant="link" size="lg">Large</Button>
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-xl font-semibold">As Link (href)</h2>
                    <div class="flex gap-3 items-center">
                        <Button href="#" variant="outline">Go somewhere</Button>
                        <Button href="#" variant="default">Navigate</Button>
                    </div>
                </div>

                <div class="space-y-3">
                    <h2 class="text-xl font-semibold">Disabled</h2>
                    <div class="flex gap-3 items-center">
                        <Button disabled>Disabled</Button>
                        <Button variant="destructive" disabled>Disabled</Button>
                        <Button variant="outline" disabled>Disabled</Button>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <h1 class="text-3xl font-bold mb-6">Input & Label Examples</h1>

            <div class="space-y-6 max-w-md">
                <div class="space-y-2">
                    <Label for="text-input">Text Input</Label>
                    <Input id="text-input" placeholder="Enter some text..." />
                </div>

                <div class="space-y-2">
                    <Label for="email-input">Email</Label>
                    <Input
                        id="email-input"
                        type="email"
                        placeholder="your@email.com"
                    />
                </div>

                <div class="space-y-2">
                    <Label for="password-input">Password</Label>
                    <Input
                        id="password-input"
                        type="password"
                        placeholder="Enter password"
                    />
                </div>

                <div class="space-y-2">
                    <Label for="number-input">Number</Label>
                    <Input
                        id="number-input"
                        type="number"
                        placeholder="0"
                        min="0"
                        max="100"
                    />
