---
import "@/styles/global.css";
import BaseHead from "@/components/BaseHead.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import Button from "@/components/ui/Button.astro";

const { title, description, image, canonicalURL, frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en" class="light">
    <head>
        <script is:inline>
            // Apply saved light/dark theme
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                document.documentElement.classList.remove('light');
                document.documentElement.classList.add('dark');
            } else if (savedTheme === 'light') {
                document.documentElement.classList.remove('dark');
                document.documentElement.classList.add('light');
            }
        </script>
        <BaseHead
            title={title}
            description={description}
            image={image}
            canonicalURL={canonicalURL}
        />
    </head>
    <body class="bg-background text-foreground transition-colors flex flex-col min-h-screen">
        <Navbar />
        <article class="container mx-auto px-4 py-12 max-w-3xl typography flex-1">
            <header class="mb-12 border-b border-border pb-8">
                <a href="/blog" class="inline-block mb-6">
                    <Button variant="ghost" size="sm">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                            <path d="m15 18-6-6 6-6"/>
                        </svg>
                        Back to Blog
                    </Button>
                </a>
                <h1 class="!mt-0">{frontmatter.title}</h1>
                <div class="flex items-center gap-4 text-muted-foreground mt-4">
                    {frontmatter.pubDate && (
                        <time datetime={frontmatter.pubDate}>
                            {new Date(frontmatter.pubDate).toLocaleDateString('en-US', {
                                year: 'numeric',
                                month: 'long',
                                day: 'numeric'
                            })}
                        </time>
                    )}
                    {frontmatter.author && (
                        <span>By {frontmatter.author}</span>
                    )}
                </div>
            </header>
            <div class="max-w-none">
                <slot />
            </div>
        </article>
        <Footer />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        min-height: 100%;
    }

    body {
        height: auto;
    }

    /* Prevent flash of unstyled content */
    html:not(.light):not(.dark) {
        visibility: hidden;
    }

    html.light,
    html.dark {
        visibility: visible;
    }
</style>
