---
import { SITE } from "@/siteConfig";
import Separator from "@/components/ui/Separator.astro";
import NavigationMenuLink from "@/components/ui/NavigationMenuLink.astro";

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border bg-background">
    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- About Section -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-foreground">{SITE.name || SITE.title}</h3>
                <p class="text-muted-foreground text-sm">
                    {SITE.description}
                </p>
            </div>

            <!-- Swim Lesson Types -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-foreground">Swim Lesson Types</h3>
                <nav class="flex flex-col gap-2">
                    {SITE.footerNav?.map((link) => (
                        <NavigationMenuLink href={link.href} class="text-muted-foreground hover:text-foreground transition-colors text-sm w-fit">
                            {link.label}
                        </NavigationMenuLink>
                    ))}
                </nav>
            </div>

            <!-- Resources -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-foreground">Resources</h3>
                <nav class="flex flex-col gap-2">
                    <NavigationMenuLink href="/about" class="text-muted-foreground hover:text-foreground transition-colors text-sm w-fit">
                        About Us
                    </NavigationMenuLink>
                    <NavigationMenuLink href="/browse" class="text-muted-foreground hover:text-foreground transition-colors text-sm w-fit">
                        Browse All Programs
                    </NavigationMenuLink>
                    <NavigationMenuLink href="/" class="text-muted-foreground hover:text-foreground transition-colors text-sm w-fit">
                        Find Lessons Near You
                    </NavigationMenuLink>
                </nav>
            </div>
        </div>

        <Separator class="my-8" />

        <div class="text-center">
            <p class="text-muted-foreground text-sm">
                &copy; {currentYear} {SITE.name || SITE.title}. All rights reserved.
            </p>
        </div>
    </div>
</footer>
