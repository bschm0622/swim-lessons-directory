---
import { SITE } from "@/siteConfig";
import Separator from "@/components/ui/Separator.astro";
import NavigationMenuLink from "@/components/ui/NavigationMenuLink.astro";

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-border bg-background">
    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- About Section -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-foreground">{SITE.name || SITE.title}</h3>
                <p class="text-muted-foreground text-sm">
                    {SITE.description}
                </p>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-foreground">Quick Links</h3>
                <nav class="flex flex-col gap-2">
                    {SITE.nav.map((link) => (
                        <NavigationMenuLink href={link.href} class="text-muted-foreground hover:text-foreground transition-colors text-sm w-fit">
                            {link.label}
                        </NavigationMenuLink>
                    ))}
                </nav>
            </div>

            <!-- Social Links -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-foreground">Connect</h3>
                <p class="text-muted-foreground text-sm">
                    Built with <a href="https://astro.build" class="text-primary hover:underline" target="_blank" rel="noopener">Astro</a> and <a href="https://tailwindcss.com" class="text-primary hover:underline" target="_blank" rel="noopener">Tailwind CSS</a>
                </p>
            </div>
        </div>

        <Separator class="my-8" />

        <div class="text-center">
            <p class="text-muted-foreground text-sm">
                &copy; {currentYear} {SITE.name || SITE.title}. All rights reserved.
            </p>
        </div>
    </div>
</footer>
