---
interface Props {
  type?: string;
  class?: string;
  [key: string]: any;
}

const {
  type,
  class: className,
  ...props
} = Astro.props;

const classes = `file:text-muted-foreground placeholder:text-muted-foreground selection:bg-primary selection:text-primary-foreground border-border h-9 w-full min-w-0 rounded-md border bg-transparent px-3 py-1 text-base shadow-xs transition-[color,box-shadow] outline-none file:inline-flex file:h-7 file:border-0 file:bg-transparent file:text-sm file:font-medium disabled:pointer-events-none disabled:cursor-not-allowed disabled:opacity-50 md:text-sm focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive ${className || ''}`;
---

<input
  type={type as any}
  data-slot="input"
  class={classes}
  {...props}
/>
