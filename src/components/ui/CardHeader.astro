---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const classes = `@container/card-header grid auto-rows-min grid-rows-[auto_auto] items-start gap-1.5 px-6 has-data-[slot=card-action]:grid-cols-[1fr_auto] [.border-b]:pb-6 ${className || ''}`;
---

<div
  data-slot="card-header"
  class={classes}
>
  <slot />
</div>
