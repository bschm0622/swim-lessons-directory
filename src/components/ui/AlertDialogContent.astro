---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const overlayClasses = "data-[state=open]:animate-in data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0 fixed inset-0 z-[110] bg-black/50 transition-opacity duration-200";

const contentClasses = `bg-background data-[state=open]:animate-in data-[state=closed]:animate-out data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0 data-[state=closed]:zoom-out-95 data-[state=open]:zoom-in-95 fixed top-[50%] left-[50%] z-[120] grid w-full max-w-[calc(100%-2rem)] gap-4 rounded-lg border border-border p-6 shadow-lg duration-200 sm:max-w-lg transition-all ${className || ''}`;
---

<div
  data-slot="alert-dialog-overlay"
  data-state="closed"
  class={overlayClasses}
  style="opacity: 0;"
></div>

<div
  data-slot="alert-dialog-content"
  data-state="closed"
  class={contentClasses}
  style="opacity: 0; transform: translate(-50%, -50%) scale(0.95);"
>
  <slot />
</div>
