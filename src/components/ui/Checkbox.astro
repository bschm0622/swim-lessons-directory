---
interface Props {
  id?: string;
  name?: string;
  value?: string;
  checked?: boolean;
  disabled?: boolean;
  required?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  id,
  name,
  value,
  checked = false,
  disabled = false,
  required = false,
  class: className,
  ...props
} = Astro.props;
---

<div class="relative inline-flex">
  <input
    type="checkbox"
    id={id}
    name={name}
    value={value}
    checked={checked}
    disabled={disabled}
    required={required}
    data-slot="checkbox"
    class:list={[
      'peer size-4 shrink-0 rounded-[4px] border border-input shadow-xs transition-shadow outline-none',
      'focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px]',
      'checked:bg-primary checked:text-primary-foreground checked:border-primary',
      'disabled:cursor-not-allowed disabled:opacity-50',
      'aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive',
      'dark:bg-input/30 dark:checked:bg-primary',
      'appearance-none cursor-pointer',
      className
    ]}
    {...props}
  />
  <svg
    class="pointer-events-none absolute inset-0 size-4 hidden peer-checked:block text-current"
    viewBox="0 0 15 15"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M11.4669 3.72684C11.7558 3.91574 11.8369 4.30308 11.648 4.59198L7.39799 11.092C7.29783 11.2452 7.13556 11.3467 6.95402 11.3699C6.77247 11.3931 6.58989 11.3355 6.45446 11.2124L3.70446 8.71241C3.44905 8.48022 3.43023 8.08494 3.66242 7.82953C3.89461 7.57412 4.28989 7.55529 4.5453 7.78749L6.75292 9.79441L10.6018 3.90792C10.7907 3.61902 11.178 3.53795 11.4669 3.72684Z"
      fill="currentColor"
      fill-rule="evenodd"
      clip-rule="evenodd"
    />
  </svg>
</div>
