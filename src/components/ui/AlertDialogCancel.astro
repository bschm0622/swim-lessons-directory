---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const classes = `inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium transition-colors disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg:not([class*='size-'])]:size-4 shrink-0 [&_svg]:shrink-0 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-9 px-4 py-2 has-[>svg]:px-3 ${className || ''}`;
---

<button
  type="button"
  data-slot="alert-dialog-cancel"
  class={classes}
>
  <slot />
</button>
