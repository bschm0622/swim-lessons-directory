---
import ScrollArea from './ScrollArea.astro';

interface Props {
  class?: string;
}

const {
  class: className
} = Astro.props;
---

<div
  data-slot="dropdown-menu-content"
  data-state="closed"
  class:list={[
    'hidden absolute z-50 mt-2 min-w-[8rem] rounded-md border border-border bg-popover text-popover-foreground shadow-md overflow-hidden',
    'left-0',
    className
  ]}
>
  <div class="max-h-[300px] overflow-y-auto scroll-area-viewport p-1">
    <slot />
  </div>
</div>

<style>
  .scroll-area-viewport {
    scrollbar-width: thin;
    scrollbar-color: hsl(var(--border)) transparent;
  }

  .scroll-area-viewport::-webkit-scrollbar {
    width: 10px;
  }

  .scroll-area-viewport::-webkit-scrollbar-track {
    background: transparent;
  }

  .scroll-area-viewport::-webkit-scrollbar-thumb {
    background-color: hsl(var(--border));
    border-radius: 5px;
    border: 2px solid transparent;
    background-clip: padding-box;
  }

  .scroll-area-viewport::-webkit-scrollbar-thumb:hover {
    background-color: hsl(var(--border) / 0.8);
  }
</style>
