---
// Toast container component - add this once to your layout
---

<div id="toast-container" class="fixed top-4 right-4 z-[110] flex flex-col gap-2 pointer-events-none">
</div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('toast-container');

    window.toast = function(message, options = {}) {
      const { duration = 4000, description = '' } = options;

      const toast = document.createElement('div');
      toast.className = 'pointer-events-auto rounded-lg shadow-lg p-4 min-w-[300px] max-w-[420px] bg-popover text-popover-foreground border border-border';
      toast.style.cssText = 'transform: translateY(100%) scale(0.95); opacity: 0; transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);';

      toast.innerHTML = `
        <div class="flex items-start gap-2">
          <div class="flex-1">
            <div class="font-semibold text-sm">${message}</div>
            ${description ? `<div class="text-sm text-muted-foreground mt-1">${description}</div>` : ''}
          </div>
          <button class="toast-close text-muted-foreground hover:text-foreground transition-colors">
            <svg width="16" height="16" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M11.7816 4.03157C12.0062 3.80702 12.0062 3.44295 11.7816 3.2184C11.5571 2.99385 11.193 2.99385 10.9685 3.2184L7.50005 6.68682L4.03164 3.2184C3.80708 2.99385 3.44301 2.99385 3.21846 3.2184C2.99391 3.44295 2.99391 3.80702 3.21846 4.03157L6.68688 7.49999L3.21846 10.9684C2.99391 11.193 2.99391 11.557 3.21846 11.7816C3.44301 12.0061 3.80708 12.0061 4.03164 11.7816L7.50005 8.31316L10.9685 11.7816C11.193 12.0061 11.5571 12.0061 11.7816 11.7816C12.0062 11.557 12.0062 11.193 11.7816 10.9684L8.31322 7.49999L11.7816 4.03157Z" fill="currentColor" fill-rule="evenodd" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      `;

      toast.querySelector('.toast-close').addEventListener('click', () => {
        toast.style.cssText += 'transform: translateY(100%) scale(0.95); opacity: 0;';
        setTimeout(() => toast.remove(), 350);
      });

      container.appendChild(toast);

      setTimeout(() => {
        toast.style.cssText = 'transform: translateY(0) scale(1); opacity: 1; transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);';
      }, 10);

      if (duration > 0) {
        setTimeout(() => {
          toast.style.cssText += 'transform: translateY(100%) scale(0.95); opacity: 0;';
          setTimeout(() => toast.remove(), 350);
        }, duration);
      }
    };
  });
</script>
