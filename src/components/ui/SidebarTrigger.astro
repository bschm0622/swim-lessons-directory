---
interface Props {
  sidebarId: string;
  class?: string;
}

const { sidebarId, class: className } = Astro.props;
---

<button
  type="button"
  data-slot="sidebar-trigger"
  data-sidebar-id={sidebarId}
  class={`inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors hover:bg-accent hover:text-accent-foreground h-9 w-9 ${className || ''}`}
  aria-label="Toggle sidebar"
>
  <slot>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="size-5"
    >
      <line x1="3" x2="21" y1="6" y2="6" />
      <line x1="3" x2="21" y1="12" y2="12" />
      <line x1="3" x2="21" y1="18" y2="18" />
    </svg>
  </slot>
</button>
